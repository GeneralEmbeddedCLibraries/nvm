////////////////////////////////////////////////////////////////////////////////
/**
*		Get configuration of NVM regions
*
* @return	Pointer to NVM configuration table
*/
////////////////////////////////////////////////////////////////////////////////
const void * nvm_cfg_get_regions(void)
{
	return (const nvm_region_t*) &g_nvm_region;
}

